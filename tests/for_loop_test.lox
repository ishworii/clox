// For loop test - basic functionality
print "=== For Loop Test ===";

// Simple counting loop
print "Counting from 1 to 5:";
for (var i = 1; i <= 5; i = i + 1) {
    print i;
}

// Counting down
print "Counting down from 5 to 1:";
for (var j = 5; j >= 1; j = j - 1) {
    print j;
}

// For loop with arithmetic
print "Sum of numbers 1 to 10:";
var sum = 0;
for (var k = 1; k <= 10; k = k + 1) {
    sum = sum + k;
}
print "Sum =";
print sum;

// For loop with step of 2
print "Even numbers from 2 to 10:";
for (var n = 2; n <= 10; n = n + 2) {
    print n;
}

print "=== For Loop Test Complete ===";